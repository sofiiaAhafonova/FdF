{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "gcc",
            "args": ["-Wall","-Wextra", "-Werror", "get_next_line.c", "keyboard.c", "read_map.c", "main.c", "libft/libft.a", "minilibx_macos/libmlx.a", "-o", "fdf", "-lmlx","-framework","OpenGL","-framework","AppKit"],
            "problemMatcher": {
                "owner": "c",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}